<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_pokemon_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/descr_pokemon_recyclerview"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        />

    <TextView
        android:id="@+id/row_pokemon_id_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:layout_alignParentEnd="true"
        android:textSize="34sp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/row_pokemon_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/row_pokemon_imageview"
        android:layout_toStartOf="@id/row_pokemon_id_textview"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="6dp"
        />

    <TextView
        android:id="@+id/row_pokemon_weight_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_pokemon_name_textview"
        android:layout_toEndOf="@id/row_pokemon_imageview"
        android:layout_marginStart="6dp"
        />


    <TextView
        android:id="@+id/row_pokemon_height_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_pokemon_name_textview"
        android:layout_toEndOf="@id/row_pokemon_weight_textview"
        android:layout_marginStart="6dp"
        />
    </RelativeLayout>



</android.support.v7.widget.CardView>